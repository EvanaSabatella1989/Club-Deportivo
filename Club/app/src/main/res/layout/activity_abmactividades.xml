<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ABMActividadesActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <SearchView
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_background" />

                <Button
                    android:id="@+id/btnActividadNueva"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="0dp"

                    android:layout_marginEnd="20dp"
                    android:background="@drawable/background_bottom"
                    android:fontFamily="sans-serif"
                    android:text="@string/agregar"
                    android:textColor="@color/white"
                    android:textSize="34sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/input_background"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewActividad1"
                        android:layout_width="10dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        app:srcCompat="@mipmap/icon_actividad" />

                    <TextView
                        android:id="@+id/textViewActividad1"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="@string/actividad1" />

                    <Button
                        android:id="@+id/btnActividad1"
                        android:layout_width="10dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:fontFamily="sans-serif"
                        android:text="@string/agregar"
                        android:textSize="34sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/input_background"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewActividad2"
                        android:layout_width="40dp"
                        android:layout_height="35dp"
                        app:srcCompat="@mipmap/icon_actividad"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/textViewActividad2"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_thin"
                        android:text="@string/actividad2"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/buttonEdit"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_margin="10dp"
                        android:background="@mipmap/editar_lapiz"
                        android:fontFamily="sans-serif"
                         />
                    <Button
                        android:id="@+id/buttonDelete"
                        android:layout_width="21dp"
                        android:layout_height="28dp"
                        android:layout_margin="10dp"
                        android:background="@mipmap/eliminar"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/input_background"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewActividad3"
                        android:layout_width="10dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        app:srcCompat="@mipmap/icon_actividad"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/textViewActividad3"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/actividad3"
                        android:layout_gravity="center"/>

                    <Button
                        android:id="@+id/button11"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:fontFamily="sans-serif"
                        android:text="@string/agregar"
                        android:textSize="34sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/input_background"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewActividad4"
                        android:layout_width="10dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        app:srcCompat="@mipmap/icon_actividad"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/textViewActividad4"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/actividad4"
                        android:layout_gravity="center"/>

                    <Button
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:fontFamily="sans-serif"
                        android:text="@string/agregar"
                        android:textSize="34sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/input_background"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewActividad5"
                        android:layout_width="10dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        app:srcCompat="@mipmap/icon_actividad"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/textViewActividad5"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/actividad5"
                        android:layout_gravity="center"/>

                    <Button
                        android:id="@+id/button10"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:fontFamily="sans-serif"
                        android:text="@string/agregar"
                        android:textSize="34sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>